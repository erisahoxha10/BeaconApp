<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/beacon_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beacon Data"
            android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/beacon_instanceId" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Beacon ID:"
                android:textSize="25dp" />
        <TextView
            android:id="@+id/beacon_instanceId"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:hint="Beacon InstanceId"
            android:textSize="15dp" />

            <TextView
                android:id="@+id/beacon_namespaceId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:hint="Beacon NamespaceId"
                android:textSize="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Beacon URL:"
                android:textSize="25dp" />
        <TextView
            android:id="@+id/beacon_url"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:hint="Beacon URL"
            android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Beacon Voltage:"
                android:textSize="25dp" />

        <TextView
            android:id="@+id/beacon_voltage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:hint="Voltage"
            android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Temperature:"
                android:textSize="25dp"/>

        <TextView
            android:id="@+id/beacon_temperature"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:hint="Temperature"
            android:textSize="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Distance:"
                android:textSize="25dp"/>
        <TextView
            android:id="@+id/beacon_distance"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:hint="Distance"
            android:textSize="15dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/update_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_gravity="center"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>